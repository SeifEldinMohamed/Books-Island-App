<resources>
    <!-- Base application theme. -->
    <style name="Theme.BooksIslandApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="RoundedSquare">
        <item name="cornerSize">8%</item>
    </style>

    <style name="CircleStyle">
        <item name="cornerSize">100%</item>
    </style>

    <style name="menu_text_style" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="toolbar_style" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/_20ssp</item>
    </style>
</resources>